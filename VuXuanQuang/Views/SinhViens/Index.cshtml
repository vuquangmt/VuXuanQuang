@model IEnumerable<VuXuanQuang.Models.SinhVien>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Sinh Viên</h2>

<p>
    @Html.ActionLink("Thêm Dữ liệu", "Create")
</p>
<table class="table">

    <tr>
        <th>
            <label>Mã Sinh Viên</label>
        </th>
        <th>
            <label>Tên Sinh Viên</label>
        </th>
        <th>
            <label>Mã Lớp</label>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.MaSinhVien)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.HoTen)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.MaLop)
    </td>
    <td>
        @Html.ActionLink("Sửa", "Edit", new { id = item.MaSinhVien }) |
        @Html.ActionLink("Xóa", "Delete", new { id = item.MaSinhVien })
    </td>
</tr>
}

</table>
